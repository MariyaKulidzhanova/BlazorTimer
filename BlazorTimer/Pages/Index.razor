@page "/"

@using System.Threading;

<input @bind-value="Count" />

<h1>@Count</h1>
<h2>@Text</h2>

<button @onclick=@StartCountdown>@ButtonName</button>

@code {
    private int Count { get; set; } = 0;
    private string ButtonName { get; set; } = "Start";
    private string Text { get; set; } = "";
    private int IsOn { get; set; } = 0;


    void StartCountdown()
    {
        IsOn++;
        if (IsOn % 2 == 0)
        {
            ButtonName = "Continue timer";
        }
        else if (IsOn % 2 != 0)
        {
            ButtonName = "Pause timer";
        }


        Timer timer = new Timer(new TimerCallback(_ =>
        {
            if (Count > 0)
            {
                Count--;


                InvokeAsync(() =>
                {
                    StateHasChanged();
                });
            }
        }), null, 1000, 1000);

